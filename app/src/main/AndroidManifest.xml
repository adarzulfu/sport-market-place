<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hilt">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_adidas"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_adidas"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hilt"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".scene.splash.SplashActivity"
            android:theme="@style/Theme.Hilt.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".scene.main.MainActivity"
            android:theme="@style/Theme.Hilt" />
    </application>

</manifest>